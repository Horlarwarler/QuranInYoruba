<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuranInYoruba" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_green</item>
        <item name="colorPrimaryVariant">@color/light_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.QuranInYoruba.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuranInYoruba.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.QuranInYoruba.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bottomNavigation" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/deep_green</item>
        <item name="android:colorForeground">@color/deep_green</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText" parent="viewParent">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/deep_green</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="viewParent.arabicText" parent="viewParent">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/deep_green</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>