<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="120dp"
    android:outlineProvider="none"
    android:weightSum="1"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/deep_green_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surah"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/white"
            android:textAppearance="?android:dialogTitle" />

            <TextView
                android:id="@+id/notification_surah_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quran In Yoruba"
                android:textSize="15sp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/white"
                android:textAppearance="?android:dialogTitle"
                android:textAlignment="textEnd"
                android:textDirection="ltr"
                />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            >

            <TextView
                android:id="@+id/notification_surah_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surah 8 Verse 9"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:dialogTitle"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="3">
                <ImageButton
                    android:id="@+id/previous_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/notification_previous"
                    android:layout_weight="1"
                    android:padding="5dp"


                    />
                <ImageButton
                    android:id="@+id/play_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/notification_play"
                    android:layout_weight="1"
                    app:tint="@color/white"
                    android:padding="5dp"


                    />
                <ImageButton
                    android:id="@+id/next_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:src="@drawable/notification_next"
                    android:padding="5dp"

                    />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:maxHeight="133dp"
            android:maxWidth="172dp"
            app:srcCompat="@drawable/quran_open"
            android:scaleType="fitCenter"/>
    </LinearLayout>







</LinearLayout>