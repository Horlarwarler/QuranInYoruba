<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/dua_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morning &amp; evening "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dua_image"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/chapter_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="132 Chapters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chapter_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="1"
        android:textSize="12sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>