<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/surah_box"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:background="@drawable/white_corner_background"
    android:paddingStart="13dp"
    android:paddingEnd="10dp"
    android:paddingTop="13dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="17dp"

    >

    <TextView
        android:id="@+id/ayah_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="@drawable/number_background"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al- Fathiah"
        android:textColor="@color/deep_green"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/ayah_number"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/surah_name_arabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مَرْيَم  "
        android:textColor="@color/deep_green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/surah_name_arabic"
        app:layout_constraintBottom_toBottomOf="@id/surah_name_arabic"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textDirection="rtl"


        />
    <TextView
        android:id="@+id/surah_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makiyah, 7 Ayah"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/bookmark"
        app:layout_constraintTop_toBottomOf="@id/bookmark"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>