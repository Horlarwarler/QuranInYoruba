<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="15dp"
    android:background="@drawable/white_corner_background"
    android:layout_marginBottom="15dp"
    android:outlineProvider = "none"

    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp"
        />
    <TextView
        android:id="@+id/dua_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="@drawable/deep_green_number_background"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        />
    <ImageButton
        android:id="@+id/share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/share"
        app:layout_constraintTop_toTopOf="@id/dua_number"
        app:layout_constraintBottom_toBottomOf="@id/dua_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        app:tint="@color/deep_green" />

    <TextView
        android:id="@+id/dua_arabic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="كن لا بد أن أوضح لك أن كل هذه الأفكار المغلو ة حول اس روتمجي
ة حول استنكار  النشوةة  حول استنكار  النشوة وتم"
        android:textColor="@color/deep_green"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/dua_number"
        android:textAlignment="textStart"
        android:textDirection="rtl"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/uthmani"

        />
    <TextView
        android:id="@+id/dua_translation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is the translation of the surrahdj djdjjd. So we can safely sa"
        android:textColor="@color/light_dark"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/dua_arabic"
        android:textAlignment="textStart"
        android:textDirection="ltr"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        />

    <View
        android:id="@+id/reference_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        android:background="@color/light_grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dua_translation"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/dua_reference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="This is the LDDND DDKDKDKDKDDLDLDLDDNDNDNDfootnote of the surrahdj djdjjd. So we can safely sa"
        android:textAlignment="textStart"
        android:textColor="@color/light_dark"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/reference_divider"
        android:visibility="visible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>